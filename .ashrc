# make our shell look more minimal
export PS1='; '

# aliases
## runs fastfetch but disable the color
alias fetch="fastfetch --pipe"

## takes a screenshot and put the screenshots into ~/Pictures
alias sniff="scrot -p -d 2 ~/Pictures/%b%d-%H:%M:%S.png ; echo 'done!'"

## make startx quieter by redirecting it's output to ~/.xorg.log
alias startx="startx -- -keeptty >~/.xorg.log 2>&1"
