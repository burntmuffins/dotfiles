TitleFont	"-adobe-helvetica-bold-r-normal--*-120-*-*-*-*-*-*"
ResizeFont	"-*-courier-medium-r-*-*-12-*-*-*-*-*-*-*"
#MenuFont	"-*-courier-bold-r-*-*-10-*-*-*-*-*-*-*"
#MenuFont	"-adobe-helvetica-bold-r-normal--*-70-*-*-*-*-*-*"
MenuFont	"-*-fixed-*-r-*-*-14-120-*-*-*-*-iso8859-1"
IconFont	"-*-courier-medium-r-*-*-12-*-*-*-*-*-*-*"
IconManagerFont	"-*-courier-medium-r-*-*-12-*-*-*-*-*-*-*"
ShowWorkSpaceManager			# start with workspace manager up
#ShowIconManager
NoOpaqueMove
NoOpaqueResize
NoTitle
BorderWidth 4
BorderResizeCursors
NoMenuShadows
DontWarpCursorInWMap
#RandomPlacement "off"

WorkSpaceManagerGeometry        "150x15+0+0" 4
WorkSpaces {
    "One"   {"#686B9F" "white" "#777777"}
    "Two"   {"#619AAE" "white" "#777777"}
    "Three" {"#727786" "white" "#777777"}
    "Four"  {"#8C5b7A" "white" "#777777"}
}

# commented out is colors that isn't used/showed in ctwm with my config
Color
{
    BorderColor           "#57A8A8"
    DefaultBackground     "White"
    DefaultForeground     "Black"
    BorderTileBackground  "#9FEFEF"
    BorderTileForeground  "#9FEFEF"
    #TitleBackground       "DeepSkyBlue1"
    #TitleForeground       "Black"
    MenuBackground        "White"
    MenuForeground        "DarkGreen"
    MenuTitleBackground   "LightCyan"
    MenuTitleForeground   "Black"
    IconBackground        "#FFEAEA"
    IconForeground        "Black"
    IconBorderColor       "#FFAAAA"
    #IconManagerBackground "White"
    #IconManagerForeground "Black"
    MapWindowBackground   "#FFEAEA"
    MapWindowForeground   "Black"
}

IconManagerGeometry		"160x300-0+0" 1
IconManagerDontShow {
    "WorkSpaceManager"
}

NoTitle {                  # little programs that look like icons
#    "TWM Icon Manager"
    "WorkSpaceManager"
    "xload"
    "xclock"
}

OccupyAll {
	"xclock"
	"xload"
}

NoHighlight {
	"WorkSpaceManager"
}


MoveDelta 3
Function "move-or-iconify"	{ f.move f.deltastop f.iconify }
Function "resize-or-raise"	{ f.resize f.deltastop f.raise }

# them keybinds
Button1 =	: root		: f.menu "defops"
#Button2 =	: root		: f.menu "windowops"
Button3 =	: root		: f.menu "apps"

"C" = m | s	: window|icon	: f.delete
"R" = m | s	: root		: f.restart
"Q" = m | s	: root		: f.quit

Button1 = m	: window|icon	: f.move
Button2 = m	: window|icon	: f.iconify
Button3 = m	: window|icon	: f.function "resize-or-raise"

#Button1 =	: title		: f.function "move-or-raise"
#Button2 =	: title		: f.raiselower
#Button1 = m	: title		: f.movetitlebar

Button1 =	: icon		: f.function "move-or-iconify"
Button2 =	: icon		: f.iconify

Button1 =	: iconmgr	: f.iconify
Button2 =	: iconmgr	: f.iconify

Button1 =	: frame		: f.resize
Button1 = m	: frame		: f.move
Button2 =	: frame		: f.raiselower

# and the ugly menu
menu "defops"
{
	"Pin"		f.pin
	"New"		!"xterm &"
	"Resize"	f.resize
	"Move"		f.move
	"Max"		f.fullzoom
	"Delete"	f.delete
}

menu "apps"
{
	"Pin"		f.pin
	"Firefox"	!"firefox &"
	"Htop"		!"xterm -e htop &"
	"Prism"		!"prismlauncher &"
	"Powder"	!"powder &"
	"Vesktop"	!"vesktop &"
}

menu "windowops" {
    "Windows"		f.title
    "Pin"		f.pin
    "Occupy"		f.occupy
    "Occupy All"	f.occupyall
    "Iconify"		f.iconify
    "Refresh"		f.refresh
    "Vanish"		f.vanish
    "Info"		f.identify
    "Resize"		f.resize
    "Move"		f.move
    "Animate"		f.startanimation
    "Don't animate"	f.stopanimation
    "Delete"		f.delete
    "Kill"		f.destroy
}
