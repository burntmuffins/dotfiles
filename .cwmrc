# the font
fontname "sans-serif:pixelsize=14:bold"

# windows' stuffs
borderwidth 4
sticky yes

# menu applications
command " xterm"		xterm
command " htop"			"xterm -e htop"
command " firefox"		firefox 
command " supertuxkart "	supertuxkart

# ignore the specified application
ignore oclock

# colors
color activeborder	"#55aaaa"
color inactiveborder	"#9eefef"
color menubg		"#eaffe8"
color menufg		"#458a45"
color selfont		"#eaffe8"
