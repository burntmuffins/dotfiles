## menu font ##
fontname "sans-serif:pixelsize=14:regular"
#fontname "VGA:pixelsize=14:Regular"

## windows' stuffs ##
borderwidth 7
sticky yes

## menu applications ##
command "  term"	"xterm -T term"
command "  htop"	"xterm -e htop"
command "  mixer"	"xterm -e alsamixer"
command "  gimp"	gimp
command "  web"		firefox 
command "  pingus"	pingus
command "  prism"	prismlauncher

## colors ##
color activeborder	"#458a45"
color inactiveborder	"#8acf8a"
color menubg		"#eaffe8"
color menufg		"#458a45"
color selfont		"#eaffe8"

#color activeborder	"#55aaaa"
#color inactiveborder	"#9eefef"
#color menubg		"#eaffe8"
#color menufg		"#458a45"
#color selfont		"#eaffe8"

## keybinds
bind-key CM-Return	"xterm -T term"
